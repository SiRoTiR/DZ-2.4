<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.samsung.itschool.book.equation243.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/coefficient_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/a"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/coefficient_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/b"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/coefficient_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/c"
        android:minHeight="48dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="solveEquation"
        android:text="@string/calculate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/result"/>

    <TextView
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/sirotir" />

</LinearLayout>
